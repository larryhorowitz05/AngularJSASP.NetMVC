@using Telerik.Web.Mvc.UI
@using Telerik.Web.Mvc.UI.Fluent
@using MML.Web.LoanCenter.Helpers.Utilities
@using MML.Common;
@model MML.Web.LoanCenter.ViewModels.RateOptionViewModel
<link href="@CDNHelper.CssStaticContentUrl/Content/Site.css?version=2" rel="stylesheet" type="text/css" />
<script src="@CDNHelper.JavaScriptStaticContentUrl/Scripts/BussinesContactDetails.js" type="text/javascript"></script>

<script type="text/javascript">
    function ClosePopup() {
        $('.modalBackground').css('display', 'none');
        RateOptions.CloseRateOptionNotePopup();
    };
</script>
<div id="rateOptionsNotesPopup" class="rateOptionsNotesPopup">
    <div style="visibility: hidden;" id="uxUserAccountId">@Model.SentEmailIdCurrent</div>
    <div class="conversationlogsectionheadcontent">
        <div class="conversationlogsectionheadtitle">
            <span class="namelink">Notes - Internal only</span>
        </div>
        <a id="closeconversationlog" onclick="RateOptions.CloseRateOptionNotePopup()"
            title="Minimize/Maximize Section">
            <div id="minmaxconversationlog" class="close">
            </div>
        </a>
        <div class="conversationlogheadline">
            
        </div>
        <div class="contactPopupRowInput contactRowInputAutoWidth" >
                <div id="textInputRateOptionNotes" style="padding-left:20px; padding-top:15px">
				    @Html.TextAreaFor( m => m.SentEmailNote, new { Class = "roundedBoxRateOptions" } )
                </div>
            </div>
        <div class="buttonsSectionBusinessContactPopup">
                <div class="btnCancelBusinessContactPopup imp-button-div-hs-ws-sec" onclick="RateOptions.CloseRateOptionNotePopup()">
                    Cancel</div>
                <div class="btnSaveBusinessContactPopup imp-button-div-hs-ws-prim" onclick="RateOptions.SaveRetailOptionNotes('@Model.SentEmailIdCurrent')">
                    Save</div>
        </div>
    </div>
</div>
