@model MML.Web.LoanCenter.ViewModels.MailRoomViewModel          
@using MML.Contracts
@using Telerik.Web.Mvc.UI
@using MML.Common
@using MML.Common.Helpers
@using MML.Web.LoanCenter.Helpers.Utilities



<div class="todolist">
    <div id="todolisthead" class="todolisthead">
        <div class="left0 w180">
            <div class="fleft">
                <span id="currentWorkQueueType" class="namelink">Mail Room</span></div>
            <div class="smallarrow">
            </div>
        </div>
        <div class="nooftasks">
            <span id="nooftasks2">@Model.TotalItems.ToString()</span> <span class="font15">Mail Room
                items</span>
        </div>
        <div class="right1">
            <div class="left1">
                <span class="normalfont">Show: </span><span id="officerTaskHeadderSpan" class="g12">@MML.Common.Helpers.EnumHelper.GetStringValue( ( ( MML.Web.LoanCenter.Helpers.Utilities.MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).BoundDate )</span>
            </div>
            <div class="right0">
                <div class="filter">
                    <ul id="nav">
                        <li><a href="#">&nbsp;</a>
                            <ul>
                                <li></li>
                                <li id="ftoday" class="lower">@Ajax.ActionLink( "Today", "Execute", "Command", new { Command = "MailRoomGridDateFilter,DateFilter=1" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Today')" }, new { id = "aftoday" } )</li>
                                <li id="ftomorrow" class="lower">@Ajax.ActionLink( "Yesterday", "Execute", "Command", new { Command = "MailRoomGridDateFilter,DateFilter=2" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Tomorrow')" }, new { id = "aftomorrow" } )</li>
                                <li id="fthisweek" class="lower">@Ajax.ActionLink( "Last Week", "Execute", "Command", new { Command = "MailRoomGridDateFilter,DateFilter=3" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('This Week')" }, new { id = "afthisweek" } )</li>
                                <li id="fnextweek" class="lower">@Ajax.ActionLink( "Last Month", "Execute", "Command", new { Command = "MailRoomGridDateFilter,DateFilter=4" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Next Week')" }, new { id = "afnextweek" } )</li>
                                <li id="fthismonth" class="lower">@Ajax.ActionLink( "All Open", "Execute", "Command", new { Command = "MailRoomGridDateFilter,DateFilter=5" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('This Month')" }, new { id = "afthismonth" } )</li>
                                <li></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <a id="minimizetoday">
                    <div id="minmax" class="min">
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div id="listandpage">
        <div class="mailroomcontent">
            <table class="mailroomtable">
                <tr class="mailroomsubjects" id="trGridHeader">                  
                    <td class="t0">
                    </td>
                    <td style="display: none">
                    </td>
                    <td class="t1" style="width: 95px; text-align: left;">@Ajax.ActionLink( AccountHelper.IsConciergeOnly() ? "LOA" : "Concierge", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=1" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('ConciergeFullName')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('ConciergeFullName')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('ConciergeFullName')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('ConciergeFullName')" } )
                    </td>
                    <td class="t4" style="width: 105px; text-align: left;">@Ajax.ActionLink( "Loan #", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=2" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('LoanNumber')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('LoanNumber')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('LoanNumber')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('LoanNumber')" } )
                    </td>
                    <td class="t14" style="width: 265px; text-align: left;">@Ajax.ActionLink( "Borrower", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=3" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('BorrowerFullName')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('BorrowerFullName')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('BorrowerFullName')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('BorrowerFullName')" } )
                    </td>                   
                    <td class="t5" style="width: 415px; text-align: left;">@Ajax.ActionLink( "Mailing Address", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=4" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('MailingAddress')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('MailingAddress')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('MailingAddress')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('MailingAddress')" } )
                    </td>
                    <td class="t6" style="width: 120px; text-align: left;">@Ajax.ActionLink( "Document", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=5" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('Document')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('ApplicationDate')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('Document')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Document')" } )
                        <div class="pipelineActivityFilterArrow">
                            <div class="mailroomLoanPurposeFilter">
                                <ul id="nav">
                                    <li><a href="#">&nbsp;</a>
                                        <ul>
                                            <li></li>
                                            <li class="@(( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter == null || ( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter == "" || ( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter == "0" ? "lowers" : "lower")">
                                                @Ajax.ActionLink( "Show All", "Execute", "Command", new { Command = "OpenMailRoomTab,DocumentTypeFilter=0" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess()" } )
                                            </li>
                                            <li class="@(( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter != null && ( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter == "2" ? "lowers" : "lower")">
                                                @Ajax.ActionLink( "Initial Disclosures", "Execute", "Command", new { Command = "OpenMailRoomTab,DocumentTypeFilter=2" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess()" } )
                                            </li>
                                            <li class="@(( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter != null && ( ( MailRoomListState )Session[ SessionHelper.MailRoomListState ] ).DocumentTypeFilter == "8" ? "lowers" : "lower")">
                                                @Ajax.ActionLink( "ReDisclosures", "Execute", "Command", new { Command = "OpenMailRoomTab,DocumentTypeFilter=8" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess()" } )
                                            </li>
                                            <li></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                    <td class="t7" style="text-align: left;">@Ajax.ActionLink( "Due Date", "Execute", "Command", new { Command = "MailRoomGridSorting,Column=6" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('DueDate')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('DueDate')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('DueDate')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('DueDate')" } )
                    </td>  
                    <td class="t8">
                        Sent
                    </td>                
                </tr>
                @if ( Model.MailRoomItems != null )
                {
                    for ( int i = 0; i < Model.MailRoomItems.Count; i++ )
                    {            
                                               
                     @Html.HiddenFor( m => m.MailRoomItems[ i ].RuleType, new { Id = "RuleType" + i } )
                     @Html.HiddenFor( m => m.MailRoomItems[ i ].RuleDate, new { Id = "RuleDate" + i } )
                    
                    <tr class="mailroomtablelist first last" id="task_@{@String.Format( "{0}P", i )}" onclick="SelectedTask('@String.Format("{0}P", i)','mailroomtablelist first last', false, 'MailRoom')">
                       
                        <td>
                            <div class="biggreen" id="arrowdiv @i">
                            </div>
                        </td>                      
                        <td style="display: none" class="loanid">@Model.MailRoomItems[ i ].LoanId</td>
                        <td style="display: none" class="encryptedloanid">@Server.UrlEncode( EncryptionHelper.EncryptRijndael( Model.MailRoomItems[ i ].LoanId.ToString(), EncriptionKeys.Default ) )</td>
                        <td style="width: 95px;">
                            <span>
                                @Model.MailRoomItems[ i ].ConciergeName
                            </span>
                        </td>  
                        <td style="width: 105px;" >
                            @Model.MailRoomItems[ i ].LoanNumber
                        </td>                      
                        <td style="width: 265px;">
                            @Model.MailRoomItems[ i ].Borrower
                        </td>  
                        <td style="width: 415px;">                            
                           @Model.MailRoomItems[ i ].MailingAddress
                        </td>
                        <td class="documentId" style="width: 120px;">                        
                           @Model.MailRoomItems[ i ].Document
                        </td>
                        <td> 
                       <div  id="dueDate@(Model.MailRoomItems[ i ].LoanId)" class="dueDate" onclick="DueDateOnClick( '@(Model.MailRoomItems[ i ].RuleType.ToString())','@(Model.MailRoomItems[ i ].RuleDate.ToString( "MM/dd/yyyy" ))', 'dueDate@(Model.MailRoomItems[ i ].LoanId)'  )"> 
                           @Model.MailRoomItems[ i ].DueDate.ToString( "MM/dd/yyyy" )  </div>                      
                        </td >                     
                        <td>
                        @{ 
                        String onclickJS = String.Format( "MailRoomGrid.MailRoomChangeStatusesToSent('{0}', event)", Model.MailRoomItems[ i ].LoanId );                          
                        }       
                          
                        @Html.CheckBox( "cbSent", new { @class = "uxPropertyAddress MMLhovertextbox", @style = "margin-left:25px", @onclick = @onclickJS } ) 
                         
                        </td>
                    </tr>		        
                    }
                }
            </table>
        </div>
        <div class="todolistfooter">
            <div id="numberOfRecordsDiv" class="normalfont left142" style="width: 170px;">
                @if ( Model.TotalItems != 0 )
                {     
                    @(( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage * 10 - 9) <span>-</span> @(( ( MML.Web.LoanCenter.Helpers.Utilities.MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage * 10 - ( 10 - @Model.MailRoomItems.Count )) <span>of</span> @Model.TotalItems.ToString() <span>records</span>
                }
                else if ( Model.TotalItems == 0 )
                {
                    <span>0 records</span>
                }
            </div>
            @if ( Model.PageCount > 1 )
            { 
                <div id="pagingDiv" class="normalfont left20">
                    @if ( Model.TotalItems != 0 )
                    {
                        if ( ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage != 1 )
                        {               
                        <a href="javascript:void(0)" onclick="MailRoomGrid.MailRoomDataHelper('command=MailRoomGridPaging,Page=@(( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage - 1)')">
                            <div class="leftarrow">
                            </div>
                        </a>
                        }
                        else
                        {
                        <div class="leftarrow">
                        </div>
                        }
                        <div class="left1010">
                            @if ( Model.CurrentPage > 10 )
                            {
                                @Ajax.ActionLink( "...", "Execute", "Command", new
                           {
                               Command = String.Format( "MailRoomGridPaging,Page={0}",
                                 ( Model.PageCount >= ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage - 10 ) ?
                                 ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage - 10 :
                                 Model.PageCount )
                           },
                                                               new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('Page, plusTen')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('Page, plusTen')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('Page, plusTen')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Page, plusTen')" }, new { @class = "page" } )
                            }
                            @for ( int j = Model.StartPage; j <= Model.EndPage; j++ )
                            {
                                if ( j != ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage )
                                { 
                                @Ajax.ActionLink( String.Format( "{0} ", j ), "Execute", "Command", new { Command = String.Format( "MailRoomGridPaging,Page={0}", j ) },
                                                                                       new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = String.Format( "MailRoomGrid.MailRoomDataOnFailure('Page{0}')", j ), OnComplete = String.Format( "MailRoomGrid.MailRoomDataOnComplete('Page{0}')", j ), OnBegin = String.Format( "MailRoomGrid.MailRoomDataOnBegin('Page{0}')", j ), OnSuccess = String.Format( "MailRoomGrid.MailRoomDataOnSuccess('Page{0}')", j ) }, new { @class = "page" } )
                                }
                                else
                                { 
                                @Ajax.ActionLink( String.Format( "{0} ", j ), "Execute", "Command", new { Command = String.Format( "MailRoomGridPaging,Page={0}", j ) }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = String.Format( "MailRoomGrid.MailRoomDataOnFailure('Page{0}')", j ), OnComplete = String.Format( "MailRoomGrid.MailRoomDataOnComplete('Page{0}')", j ), OnBegin = String.Format( "MailRoomGrid.MailRoomDataOnBegin('Page{0}')", j ), OnSuccess = String.Format( "MailRoomGrid.MailRoomDataOnSuccess('Page{0}')", j ) }, new { @class = "pageselected" } )
                                }
                            }
                            @if ( Model.LastPageDots == false )
                            {
                                @Ajax.ActionLink( "...", "Execute", "Command", new
                           {
                               Command = String.Format( "MailRoomGridPaging,Page={0}",
                               ( Model.PageCount >= ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage + 10 ) ?
                               ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage + 10 :
                               Model.PageCount )
                           },
                                                               new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "mainsection", OnFailure = "MailRoomGrid.MailRoomDataOnFailure('Page, plusTen')", OnComplete = "MailRoomGrid.MailRoomDataOnComplete('Page, plusTen')", OnBegin = "MailRoomGrid.MailRoomDataOnBegin('Page, plusTen')", OnSuccess = "MailRoomGrid.MailRoomDataOnSuccess('Page, plusTen')" }, new { @class = "page" } )
                            }
                        </div>
                            if ( ( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage != Model.PageCount )
                            {              
                        <a href="javascript:void(0)" onclick="MailRoomGrid.MailRoomDataHelper('command=MailRoomGridPaging,Page=@(( ( MailRoomListState )HttpContext.Current.Session[ SessionHelper.MailRoomListState ] ).CurrentPage + 1)')">
                            <div class="rightarrow">
                            </div>
                        </a>
                            }
                            else
                            { 
                        <div class="rightarrow">
                        </div>
                            }
                    }
                </div>
            }
        </div>
    </div>
</div>
