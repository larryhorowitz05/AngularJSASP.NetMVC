@model MML.Contracts.DomainModels.OfficerTask
@using MML.Common.Helpers
@using MML.Common
<div class="loanpurposebubble2">
    <div class="triangle">
    </div>
    <div class="loanpurposetooltip2">
        <div class="loanpurposetooltip2g">
            <div class="close" id="closePopupContainer">
            </div>
            <table>
                <tr>
                    <td colspan="4" class="line1">
                        Loan Purpose
                    </td>
                </tr>
                <tr>
                    <td class="first1">
                        Loan Type
                    </td>
                    <td class="first2 regularfont">
                        @Model.LoanType
                    </td>
                    <td class="first3">
                        Estimated Value
                    </td>
                    <td class="regularfont">
                        @if ( Model.EstimatedValue != 0 )
                        { 
                            @Model.EstimatedValue.ToString().ToMoney()
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        Loan Program
                    </td>
                    <td class="regularfont">
                        @Model.LoanProgram
                    </td>
                    <td>
                        LTV
                    </td>
                    <td class="regularfont">
                        @if ( Model.LTV != 0 )
                        {
                            @Model.LTV.ToString().ToRate()
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        Loan Amount
                    </td>
                    <td class="regularfont">
                        @if ( Model.LoanAmount != 0 )
                        { 
                            @Model.LoanAmount.ToString().ToMoney()
                        }
                    </td>
                    <td>
                        CLTV
                    </td>
                    <td class="regularfont">
                        @if ( Model.CLTV != 0 )
                        {
                            @Model.CLTV.ToString().ToRate()
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        Interest Rate
                    </td>
                    <td class="regularfont">
                        @if ( Model.InterestRate != 0 )
                        { 
                            @Model.InterestRate.ToString().ToRate()
                        }
                    </td>
                    <td>
                        Lock Date
                    </td>
                    <td class="regularfont">
                        @if ( Model.LockDate != DateTime.MinValue )
                        { 
                            @Model.LockDate.ToString( "MM/dd/yyyy" )
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        APR
                    </td>
                    <td class="regularfont">
                        @if ( Model.APR != 0 )
                        { 
                            @Model.APR
                        }
                    </td>
                    <td>
                        Loan Number
                    </td>
                    <td class="regularfont">
                        @(String.IsNullOrEmpty( Model.LoanNumber ) ? "Pending" : Model.LoanNumber)
                    </td>
                </tr>
                <tr>
                    <td>
                        Loan Point (%)
                    </td>
                    <td class="regularfont">
                        @if ( Model.LoanPointsPercentage != 0 )
                        { 
                            @Model.LoanPointsPercentage.ToString().ToRate()
                        }
                    </td>
                    <td>
                        Concierge
                    </td>
                    <td class="regularfont">
                        @StringHelper.FormatStringForDisplay( Model.Owner )
                    </td>
                </tr>
                <tr>
                    <td>
                        Loan Point ($)
                    </td>
                    <td class="regularfont">
                        @if ( Model.LoanPointsAmount != 0 )
                        { 
                            @Model.LoanPointsAmount.ToString().ToMoney()
                        }
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
                <tr>
                    <td>
                        Property Address
                    </td>
                    <td colspan="3" class="regularfont">
                        @Model.PropertyAddress
                    </td>
                </tr>
                <tr>
                    <td colspan="4" class="line2">
                        <button type="button" class="viewedit">
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
