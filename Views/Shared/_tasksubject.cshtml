@model MML.Contracts.DomainModels.OfficerTask        
<div class="subjecttooltipbubble">
    <div class="triangle">
    </div>
    <div class="subjecttooltip">
        <div class="subjecttooltipg">
            <div class="close" id="closePopupContainer">
            </div>
            <table>
                <tr>
                    <td colspan="2" class="line1">
                        Subject/Task
                    </td>
                </tr>
                <tr>
                    <td class="first">
                        Subject
                    </td>
                    <td class="regularfont">@Model.Subject
                    </td>
                </tr>
                <tr>
                    <td>
                        Due Date
                    </td>
                    <td class="regularfont">@(Model.DueDate.ToString( "MM/dd/yyyy" ))
                    </td>
                </tr>
                <tr>
                    <td>
                        Status
                    </td>
                    <td class="regularfont">@(MML.Common.Helpers.EnumHelper.GetStringValue( Model.Status ))
                    </td>
                </tr>
                <tr>
                    <td>
                        Owner
                    </td>
                    <td class="regularfont">@Model.Owner
                    </td>
                </tr>
                <tr>
                    <td>
                        Comment
                    </td>
                    <td class="regularfont">@Model.Comment
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="line2">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
